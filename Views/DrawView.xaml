                    <TextBlock Text="X1: " Width="50" />
                    <TextBox Width="50" PreviewTextInput="TextBox_PreviewTextInput">
                        <TextBox.Text>
                            <Binding Path="X1" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
